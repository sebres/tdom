proc pullValidate {g xml} {
    tdom::pullparser pp
    pp input $xml
    while {[pp next] ne "END_DOCUMENT"} {
        switch [pp state] {
            "START_TAG" {
                $g event start [pp tag]
            }
            "END_TAG" {
                $g event end
            }
            "TEXT" {
                $g event text [pp text]
            }
        }
    }
}

test structure-4.1 {validation} {
    tdom::structure create grammar
    grammar element doc {
        element e1
        element e2 ?
    }
    foreach e {e1 e2} {
        grammar element $e {}
    }
    pullValidate grammar {
        <doc><e1/></doc>
    }
} {}

    
